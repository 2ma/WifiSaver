<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/widget"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        >

    <TextView
            android:id="@+id/widget_timer_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/widget_timer_text"
            android:textSize="@dimen/widget_timer_text_size"
            android:typeface="monospace"
            />

    <TextView
            android:id="@+id/widget_screen_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/widget_screen_text"
            android:textSize="@dimen/widget_screen_text_size"
            android:layout_weight="0.5"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:typeface="monospace"
            />

</LinearLayout>